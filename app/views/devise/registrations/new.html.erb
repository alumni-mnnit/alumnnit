<div class="container">  
  <div class="modal-dialog login animated">
    <div class="modal-content">
      <div class="modal-header">
              <h4 class="modal-title">Register with</h4>
      </div>
      <div class="modal-body">  
        <div class="box">
          <div class="content"> 
            
            <div class="error"></div>
            <div class="box">
              <div class="content registerBox">
               <div class="form">                         
                <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true}) do |f| %>
                    <%= f.error_notification %>
                     <div class="form-inputs">
                        <%= f.input :email, label: false, placeholder: "Email", required: true, autofocus: true, error: 'Email is mandatory, please specify one', input_html: { class: 'form-control' } %>
                        <br>
                        <%= f.input :password, label: false, placeholder: "Password", required: true, input_html: { minlength: 6, class: 'form-control' } %>
                        <br>
                        <%= f.input :password_confirmation, label: false, placeholder: "Password Confirmation", required: true, input_html: { class: 'form-control' } %>
                        <br>
                        <%= f.input :role,:collection => User::ROLES,label: false,:include_blank => false,input_html: {class: "form-control", style: "background-color: #ffffff; color:black;"} %>
                     </div>
                      <br>
                      <div class="form-actions">
                        <%= f.button :submit, "Sign up", class: "btn btn-register btn-info" %>
                      </div>
                <% end %>
               </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <div class="forgot register-footer">
                 <span>Already have an account?</span>
                 <%= link_to 'Login', new_user_session_path %><br />
                 <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


              
