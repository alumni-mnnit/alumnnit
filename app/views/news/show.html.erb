<div class="container">

</div>
<div style="height: auto; margin-top: 30px; ">
	
	<div class="text-center" style= "margin-bottom: 40px;">	
		<h1 style="font-family:Dosis;color:black;">
			<%= @news.title %>
		</h1>
                <span style="display:none;"><%=  @news.created_at.strftime("%B %-d, %Y") %></span>
		<hr style="width:1100px">
	</div>	
		<div id="headline container" style="margin-left:40px;margin-right:40px;padding-bottom:40px;position: relative;background: white;box-shadow: 0 0 3px rgba(0,0,0,0.25),-1px 0 0 rgba(0,0,0,0.09),2px 0 2px rgba(0,0,0,0.09),0 2px 0 rgba(0,0,0,0.12);">
      <div style="position: absolute;z-index: 999;top: -8%;left: 48%;"><center><i class="fa-4x fa fa-paperclip" style="height:20px"></i></center></div> <!--<img src="images/headline.png" width="75" height="21" class="clearfloat" alt="" />-->
      <div class="row">
        <% if !@news.photo_file_name.nil? %>
          <div class="col-md-3 col-sm-offset-2" style="">
            <div id="news_image" style="margin-top:60px"> <%= image_tag(@news.photo.url(:medium),  class: "img-responsive img-hover",style:"height:300px;width:550px") %>
            </div>
          </div>
       
        <div class="col-sm-5 col-xs-offset-1 text-center " style="margin-top:30px;">
        
          <center><p style="font-size: 17px;text-align:left;font-family:Dosis;color:black;margin-top:30px"><%= @news.description %>
          </p></center>
        </div>
        <% else %>
          <div class="col-sm-5 col-md-offset-4 text-center " style="margin-top:30px;">
        
            <center><p style="font-size: 17px;text-align:left;font-family:Dosis;color:black;margin-top:30px"><%= @news.description %>
            </p></center>
          </div>
        <% end %>  

      </div>
     </div>
	<br>	
	<hr style="width:1100px">
	<div class="text-center">
		<% if user_signed_in? and current_user.is_admin == true %>
			<%= link_to "Edit", edit_news_path , class: "btn btn-lg btn-red" %>
			<%= link_to "Delete", @news,  method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-lg btn-red" %>
		<% end %>
	</div>	
		
	
</div>
