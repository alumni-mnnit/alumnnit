<style type="text/css">
  select{
    background-color: #e5e7e8;
  }
</style>
<div class="container" style="width: 50%;background: white;box-shadow: 0 0 3px rgba(0,0,0,0.25),-1px 0 0 rgba(0,0,0,0.09),2px 0 2px rgba(0,0,0,0.09),0 2px 0 rgba(0,0,0,0.12);padding: 3%;">	
	<h1 style="color: #DD5138;font-family: 'Dosis', sans-serif;"><b> Search Alumni </b></h1>
  <p>You can fill-up one or many fields to search the alumni. For the list of all alumni simply leave the fields blank and click the search button. </p>
	<%= form_for @search do |f| %> 
		<div class="form-inputs">
          <div class="form-group">
            <%= f.label :fname, "First Name" %><br />
            <%= f.text_field :fname, class: "form-control", :autofocus => true %>
          </div>
          <div class="form-group">
            <%= f.label :lname, "Last Name" %><br />
            <%= f.text_field :lname, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :degree %><br />
            <%= f.select :degree, options_for_select(@degrees),include_blank: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :branch %><br />
            <%= f.select :branch,options_for_select([['Bio-Tech.','BT'], ['Civil Engg.','CE'], ['Chemical Engg.','CHE'], ['Computer Science','CS'], ['Mechanical Engg.','ME'], ['Production and Industrial Engg.','PE'], ['Electrical Engg.','EE'], ['Electronics and Communication Engg.','ECE'], ['Information Tech.','IT'], ['Applied Mechanics','AM'], ['Bio Med. Engg.','BM'], ['Communication Sys.','COM'], ['Computer Aided Design and Manufacturing','CAD'], ['Control and Instrumentation/Power Sys.','CIS'], ['Control and Instrumentation (Part time)','CISP'], ['Design(ME)','DE'], ['Digital Sys.','DS'], ['Environmental Engg.','ENV'], ['Fluids Engg.','FE'], ['Geotechnical Engg.','GE'], ['GIS and Remote Sensing','GIS'], ['Information Security','IS'], ['Material Sci. and Engg.','MSE'], ['Micro-electronics and VLSI Design','MEV'], ['Power Electronics and ASIC Design (Part time)','PEDP'], ['Power Electronics and ASIC Design','PED'], ['Product Design and Development','PDD'], ['Bio-Tech. Dept.','BTD'], ['Chemistry Dept.','CHD'], ['Electrical Engg. Dept.','EED'], ['Electronics and Communication Dept.','ECD'], ['Humanities and Social Sci.','HSS'], ['Management Studies','SM'], ['Mathematics Dept.','MD'], ['Mechanical Engg. Dept.','MED'], ['Civil Engg. Dept.','CED'], ['Computer Sci. and Engg. Dept.','CSD'], ['Applied Mechanics Dept.','AMD']]),include_blank: true, class: "form-control" %>
          </div>
          <div class=" form-group">
            <%= f.label :year_of_passing, "Year of Degree" %><br />
            <div class='input-group date' id='datetimepicker2'>
              <%= f.select :year_of_passing, (1965..2016), include_blank: true,  class: "form-control"  %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :country %><br />
            <%= f.text_field :country, class: "form-control" %>
          </div> 
          <div class="form-group">
            <%= f.label :city, "City" %><br />
            <%= f.text_field :city, class: "form-control" %>
          </div>
		  <div class="form-group">
            <%= f.label :company, "Working Organisation" %><br />
            <%= f.text_field :company, class: "form-control" %>
          </div>   
	
	      <p> <%= f.submit "Search", class: "btn btn-md btn-danger" %> </p>
		</div>      
	<% end %>	
</div>		  