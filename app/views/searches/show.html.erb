<div class="container" style="background: white;box-shadow: 0 0 3px rgba(0,0,0,0.25),-1px 0 0 rgba(0,0,0,0.09),2px 0 2px rgba(0,0,0,0.09),0 2px 0 rgba(0,0,0,0.12);padding: 3%;">
    <div class="row text-center">
        <div class="col-lg-12">
            <h2 class="page-header"> Result <%= @search.search_users.count %> Alumni </h2>
        </div>
        <% if @search.search_users.empty? %>
            <p> Sorry!! No Alumni found. </p>
        <% else %>    
            <% @search.search_users.each do |user| %>
                <div class="col-md-4 text-center" >
                    <div class="thumbnail" style="margin-top: 30px; height: 250px !important;">
                        <div class="caption">
                            <h3>
                                <% if !user.fname.blank? and !user.lname.blank? %>
                                    <%= user.fname + " " + user.lname  %>
                                <% else %>
                                    <%= user.email.split('@').first %>
                                <% end %>
                                <br>
                                <small><%= "Degree : " + user.degree if user.degree %><br>
                                <%= "Branch : " + user.branch if user.branch %><br>
                                <%- if user.year_of_passing %>
                                    Year of Degree : <%= user.year_of_passing.year %>
                                <% end %>
                                </small>
                            </h3>
                            <p> <%= "City: " + user.city if user.city %></p>
                        </div>
                        <%= link_to "Profile", user %>
                    </div>
                </div>
            <% end %>    
        <% end %>    
    </div>
    <div class="text-center">
        <%= link_to "Back", :back , class: "btn btn-lg btn-success" %>
    </div>
</div>        
